#include <stdio.h>
#include <stdlib.h>



int main(void){

int n;
int soma;

printf("digite o tamnanho do vetor: ");
scanf("%d", &n);
int *v = (int *)malloc(n * sizeof(int));
int i;

    for ( i = 0; i < n; i++){
    printf("digite um numero:  ");
    scanf("%d", &v[i]);
    }

    int maior,menor = v[0];
    for ( i = 0; i < n; i++){
        if(v[i] > maior){
            maior = v[i];
            
            if(v[i] < menor){
            	menor = v[i];
			}
            
            

        }
    }
    
    soma = maior + menor;
    
    
    
    
    
    
    

 printf("menor: %d\n",menor);
    printf("maior: %d\n",maior);
    printf("a soma de maior e menor : %d\n", soma);
    
    free(v);

    return 0;
}




