//questao 2
//atividade 2

#include <stdio.h>
#include <stdlib.h>

int main(void) {
    int n, i;
    float m;
    m = 0.0;

printf("digite o numero de alunos: \n");
scanf("%d", &n);

float*vn=(float*)malloc(n*sizeof(float));
if (vn==NULL){
    printf("erro de memoria");
    exit(1);
}
    for (i=0; i<n; i++){
        vn[i]=i;
        printf("digite as notas: \n", i+1);
        scanf("%f", &vn[i]);
        m = m + vn[i];
    }

    m = m/n;

    printf("media =%.2f \n", m);
    if(m >=7 ){
    	printf("aprovado");
	}
	if(m < 7){
		printf("reprovado");
	}

    free(vn);
    return 0;
}


